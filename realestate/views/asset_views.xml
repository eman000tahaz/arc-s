<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--###########################################################
			###						 Views   						###
			###########################################################-->

<!--########################### PROPERTY ###################################-->
		<!-- Property Form View  -->
		<record model="ir.ui.view" id="account_asset.view_account_asset_asset_form">
			<field name="name">account.asset.asset.form</field>
			<field name="model">account.asset.asset</field>
			<field name="arch" type="xml">
				<form string="Property View">
					<header>
						<field name="state" widget="statusbar" statusbar_visible="draft,book,normal,close,sold,cancle" statusbar_colors='{"draft":"red", "normal":"blue", "close":"red","sold":"green","cancle":"black"}' select="1" clickable="True"/>
					</header>
					<sheet>
						<field name="image" widget='image' class="oe_left oe_avatar" />
						<div class="oe_left">
							<div>
								<h1>
									<field name="name" default_focus="1" placeholder="Name"/>
								</h1>
								<b><field name="code" readonly="1" string="Code" placeholder="Code"/></b>
							</div>
						</div>
						<div  class="oe_right oe_button_box">
							<button name="open_url" string="Get Location" type="object" icon="fa-location-arrow" colspan="2" class="oe_inline oe_stat_button"/>
							<button name="button_normal" string="Open" type="object" states='draft' icon="fa-folder-open" colspan="2" class="oe_inline oe_stat_button"/>
							<button name="button_close" string="Sale" type="object" states='normal' icon="fa-book" class="oe_inline oe_stat_button"/>
							<button name="button_cancel" string="End of Cycle" type="object" states='normal,sold,close' icon="fa-undo" class="oe_inline oe_stat_button"/>
							<button name="button_draft" string="Set to Availble" type="object" states='cancel' icon="fa-home" colspan="2" class="oe_inline oe_stat_button"/>
							<button name="set_to_close" states="open" string="Set to Close" type="object" icon="fa fa-close" class="oe_inline oe_stat_button"/>
							<button name="set_to_draft" states="open" string="Set to Draft" type="object" icon="fa-home" colspan="2" class="oe_inline oe_stat_button"/>
							<button class="oe_inline oe_stat_button" name="open_entries"  type="object" icon="fa-pencil">
								<field string="Entries" name="entry_count" widget="statinfo" />
							</button>
						</div>
						<group string="Location">
							<field name="lat"/>
							<field name="lon"/>
						</group>
						<group>
							<group>
							<label for="street" string="Address"/>
								<div>
									<field name="street" placeholder="Street..." required="1"/>
									<field name="street2" placeholder="Street2..."/>
									<field name="township" placeholder="Township..." />
									<div class="address_format">
										<field name="city" placeholder="City" style="width: 35%%" required="1"/>
										<field name="state_id" class="oe_no_button" placeholder="State" style="width: 40%%" options='{"no_open": True}'/>
										<field name="zip" placeholder="ZIP" style="width: 25%%"/>
									</div>
									<field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}' required="1"/>
								</div>
								<field name="age_of_property"/>
								<field name="no_of_towers" attrs="{'invisible':[('parent_id','!=',False)]}"/>
								<field name="floor" attrs="{'invisible':[('parent_id','=',False)]}"/>
								<field name="gfa_feet"/>
								<field name="gfa_meter"/>
								<field name="video_url" placeholder="//www.youtube.com/embed/mwuPTI8AT7M?rel=0"/>
								<field name="currency_id"/>
								<field name="active"/>
								<field name="has_image" invisible="1"/>
							</group>
							<group>
								<field name="parent_id" placeholder="Parent Property"/>
								<field name="type_id" required="1" placeholder="Property Type"/>
								<field name="property_manager" required="1" placeholder="Property Manager"/>
								<field name="furnished"/>
								<field name = "bedroom"/>
								<field name = "bathroom"/>
								<field name="facing"/>
								<field name = "income_acc_id" required='1'/>
								<field name = "expense_acc_id" required='1'/>
								<field name="category_id" required='1' string="Property Category"/>
								<field name="company_id" string="Property Management Company"/>
								<field name="no_of_property" attrs="{'invisible':[('parent_id','=',False)]}"/>
								<field name="simulation" invisible="1"/>
								<field name="revenue" invisible="1"/>
							</group>
						</group>
						
						<notebook>
							<page string="General">
								<group>
									<group>
										<field name="value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="salvage_value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="value_residual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="partner_id"/>
									</group>
									<group>
										<field name="method"/>
										<field name="method_progress_factor" attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
										<label for="method_time"/>
										<div>
											<field name="method_time" class="oe_inline"/>
											<button name="%(account_asset.action_asset_modify)d" states="draft" string="Change Duration" type="action" icon="terp-stock_effects-object-colorize" class="oe_inline" colspan="1"/>
										</div>
										<field name="prorata" attrs="{'invisible': [('method_time','=','end')]}"/>
										<field name="method_number" attrs="{'invisible':[('method_time','=','end')], 'required':[('method_time','=','number')]}"/>
										<field name="method_period"/>
										<field name="method_end" attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','=','number')]}"/>
									</group>
								</group>
							</page>

							<page string="Depreciation Board">
								<field name="depreciation_line_ids" mode="tree">
									<tree string="Depreciation Lines" colors="blue:(move_check == False);black:(move_check == True)">
										<field name="depreciation_date"/>
										<field name="sequence" invisible="1"/>
										<field name="depreciated_value" readonly="1"/>
										<field name="amount"/>
										<field name="remaining_value" readonly="1"/>
										<field name="move_check"/>
										<field name="parent_state" invisible="1"/>
										<button name="create_move" attrs="{'invisible':['|',('move_check','!=',False),('parent_state','!=','draft')]}" icon="fa-cogs" string="Create Move" type="object"/>
									</tree>
									<form string="Depreciation Lines"> 
										<group>
											<group>
												<field name="name"/>
												<field name="amount"/>
												<field name="move_id"/>
												<field name="move_check"/>
												<field name="parent_state" invisible="1"/>
											</group>
											<group>
												<field name="sequence"/>
												<field name="depreciation_date"/>
												<field name="depreciated_value"/>
												<field name="remaining_value"/>
											</group>
										</group>
									</form>
								</field>
								<button type="object" name="compute_depreciation_board" string="Compute" icon="terp-stock_format-scientific" colspan="2" attrs="{'invisible':[('state','=','close')]}"/>
							</page>

							<page string="History">
								<separator string="Account History"/><newline/>
								<field name="account_move_ids" readonly="1">
									<tree decoration-info="state == 'draft'" string="Journal Entries">
										<field name="date"/>
										<field name="source"/>
										<field name="name"/>
										<field name="ref"/>
										<field name="partner_id"/>
										<field name="journal_id"/>
										<field name="amount"/>
										<field name="state"/>
										<field name="currency_id" invisible="1"/>
									</tree>
								</field>
							</page>

							<page string="Sub Properties">
								<separator string="Sub Properties" colspan="4"/>
								<field name="child_ids" attrs="{'readonly':[('state','!=','draft')]}">
									<tree string="Properties">
										<field name="name"/>
										<field name="category_id"/>
										<field name="age_of_property"/>
										<field name="type_id"/>
										<field name="furnished"/>
										<field name="value"/>
										<field name="state"/>
									</tree>
								</field>
								<separator string="Room Details" colspan="4" />
								<field name="room_ids" nolabel="1" colspan="4" />
							</page>

							<page string="Occupancy" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<separator string="Occupancy &amp; Sales Income Simulation" colspan="4" />
								<group colspan="4" col="4">
									<field name="simulation_name"/>
									<field name="simulation_date"/>
									<field name="construction_cost"/>
								</group>
								<separator string="Phases" colspan="4" />
								<field name="property_phase_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',('sold','close'))]}">
									<tree string="Property Phase">
										<field name="start_date"/>
										<field name="end_date"/>
										<field name="lease_price"/>
										<field name="occupancy_rate"/>
										<field name="operational_budget"/>
										<field name="company_income"/>
										<field name="commercial_tax"/>
									</tree>
									<form string="Property Phase">
										<group colspan="4">
											<field name="start_date"/>
											<field name="end_date"/>
											<field name="lease_price"/>
											<field name="occupancy_rate"/>
											<field name="operational_budget"/>
											<field name="company_income"/>
											<field name="commercial_tax"/>
										</group>
									</form>
								</field>
								<separator string="Property Performance" colspan="4" />
								<group colspan="4" col="4">
									<field name="sales_rates"/>
									<field name="occupancy_rates"/>
									<field name="roi"/>
									<field name="ten_year_roi"/>
									<field name="return_period"/>
									<field name="operational_costs"/>
								</group>
							</page>

							<page string="Property Budget" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<separator string="Property Budget" colspan="4" />
								<field name="crossovered_budget_line_property_ids" colspan="4" nolabel="1" attrs="{'readonly':[('state','in',('sold','close'))]}">
									<tree string="Budget Lines">
										<field name="crossovered_budget_id"/>
										<field name="analytic_account_id"/>
										<field name="general_budget_id"/>
										<field name="date_from"/>
										<field name="date_to"/>
										<field name="paid_date"/>
										<field name="planned_amount" sum="Planned Amount"/>
										<field name="practical_amount" sum="Practical Amount"/>
										<field name="theoritical_amount" sum="Theoretical Amount"/>
										<field name="percentage"/>
									</tree>
									<form string="Budget Lines">
										<group>
											<group>
												<field name="crossovered_budget_id" required="1"/>
												<field name="analytic_account_id" />
												<field name="general_budget_id"/>
												<field name="planned_amount"/>
											</group>
											<group>
												<label for="date_from" string="Duration"/>
												<div>
													<field name="date_from" class="oe_inline"/> - 
													<field name="date_to" class="oe_inline"/>
												</div>
												<field name="paid_date"/>
												<field name="company_id" widget="selection"/>
												<field name="asset_id" readonly="1"/>
											</group>
										</group>
									</form>
								</field>
							</page>

							<page string="Rents,Rates &amp; Tenancy" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<group colspan="2">
									<separator string="Property Rent" colspan="4"/>
									<group colspan='4' col='4'>
										<field name="unit_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="ground_rent" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="total_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="rent_type_id" widget="selection" colspan="2"/>
										<field name= "current_tenant_id" invisible="1"/>
									</group>
								</group>
								<group  colspan="2">
									<separator string="Tenancy Property" colspan="4"/>
									<field name="tenancy_property_ids" colspan="4" readonly="1"
										nolabel="1" context="{'form_view_ref': 'realestate.property_analytic_view_form'}">
										<tree string="Tenancy Property">
											<field name="name" string="Tenancy Name"/>
											<field name="ref" string="Code"/>
											<field name="tenant_id" string="Tenant Name"/>
											<field name="date_start"/>
											<field name="date" string="End Date"/>
											<field name="rent_type_id"/>
											<field name="rent" sum="Total Rent" />
											<field name="deposit" sum="Totoal Deposit"/>
											<field name="currency_id" invisible="1"/>
										</tree>
									</field>
								</group>
							</page>

							<page string="Utility,Insurance &amp; Safety Certificate" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<separator string="Utilities" colspan="4"/>
								<field name="utility_ids" nolabel="1">
									<tree string="Utility" editable="bottom">
										<field name="utility_id" widget="selection"/>
										<field name="contact_id"/>
										<field name="ref"/>
										<field name="issue_date"/>
										<field name="expiry_date"/>
										<field name="note"/>
									</tree>
									<form string="Utility">
										<group>
											<field name="utility_id" widget="selection"/>
											<field name="contact_id"/>
											<field name="ref"/>
											<field name="issue_date"/>
											<field name="expiry_date"/>
											<field name="note"/>
										</group>
									</form>
								</field>
								<group  colspan="2">
									<separator string="Property Insurance" colspan="4"/>
									<field name= "property_insurance_ids" colspan="4" nolabel="1">
										<form string="Insurance">
											<group colspan='4' col='4'>
												<field name="name"/>
												<field name="policy_no"/>
												<field name="start_date"/>
												<field name="end_date"/>
												<field name="premium"/>
												<field name="payment_mode_type"/>
												<field name="company_id"/>
												<field name="contact"/>
												<field name="doc_name" readonly="0" invisible="1"/>
												<field name="contract" filename="doc_name"/>
											</group>
										</form>
										<tree string="Insurance">
											<field name="name"/>
											<field name="policy_no"/>
											<field name="start_date"/>
											<field name="end_date"/>
											<field name="premium" sum="Total Premium"/>
											<field name="payment_mode_type"/>
											<field name="company_id"/>
											<field name="contact"/>
											<field name="doc_name" readonly="0" invisible="1"/>
											<field name="contract" filename="doc_name"/>
										</tree>
									</field>
								</group>
								<separator string="Safety Certificate" colspan="4"/>
								<field name="safety_certificate_ids" nolabel="1">
									<tree string="Safety Certificate" editable="bottom">
										<field name="name"/>
										<field name="contact_id" widget="selection"/>
										<field name="ref"/>
										<field name="expiry_date"/>
										<field name="ew"/>
										<field name="weeks"/>
									</tree>
									<form string="Safety Certificate">
										<group colspan='4' col='4'>
											<field name="name"/>
											<field name="contact_id" widget="selection"/>
											<field name="ref"/>
											<field name="expiry_date"/>
											<field name="ew"/>
											<field name="weeks"/>
										</group>
									</form>
								</field>
							</page>

							<page string="Maintenance" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<separator string="Maintenance &amp; Repairs" colspan="4"/>
								<field name="maintenance_ids" nolabel="1">
									<tree>
										<field name="date"/>
										<field name="type"/>
										<field name="name"/>
										<field name="assign_to"/>
										<!--<field name="account_code"/>-->
										<field name="cost" sum="Total Cost"/>
										<field name="state"/>
										<field name="invc_check" invisible = "1"/>
										<button name="open_invoice" string="Open Invoice" type="object"
											attrs="{'invisible': [('invc_check','!=',True)]}"/>
									</tree>
									<form string="Documents">
										<button name="open_invoice" string="Open Invoice" type="object"
											attrs="{'invisible': [('invc_check','!=',True)]}"/>
										<group colspan="4">
											<field name="type" />
											<field name="date" />
											<field name="name" />
											<field name="assign_to"/>
											<!--<field name="account_code"/>-->
											<field name="cost"/>
											<field name="invc_check" invisible = "1"/>
											<field name="renters_fault" attrs="{'invisible': [('invc_check','!=',False)]}"/>
											<field name="state"/>
										</group>
									</form>
								</field>
							</page>

							<page string="Purchase And Sale Details" attrs="{'readonly':[('state','in',('sold','close'))]}">
								<separator string="Payment Details" colspan="4"/>
								<group colspan="4" col='4' attrs="{'readonly':[('state','in',('sold','close'))]}">
									<field name="sale_date"/>
									<field name="sale_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
									<field name="payment_term"/>
									<field name="customer_id"/>
								</group>
								<newline/>
								<group>
									<button name="genrate_payment_enteries" string="Create Enteries" type="object" 
										colspan="2" class="oe_stat_button oe_highlight" attrs="{'invisible':[('sale_instl_chck','!=',False)]}"/>
									<field name="sale_instl_chck" invisible="1"/>
									<label string="   "/>
									<button name="button_sold" string="Sale" type="object" states='close' icon="terp-accessories-archiver"/>
								</group>
								<newline/>
								<separator string="Sales Cost" colspan="4"/>
								<field name="sale_cost_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',('sold','close'))]}">
									<tree string="Sale Cost Details" editable="bottom">
										<field name="date"/>
										<field name="currency_id"/>
										<field name="amount"/>
										<field name="payment_details"/>
										<field name="move_check"/>
										<field name="remaining_amount"/>
										<field name ="rmn_amnt_per"/>
										<button name="create_move" 
											attrs="{'invisible':[('move_check','!=',False)]}" icon="fa-cogs" 
											string="Create Move" type="object"/>
									</tree>
									<form string="Cost Details">
										<group colspan="4">
											<field name="date"/>
											<field name="currency_id"/>
											<field name="amount"/>
											<field name="payment_details"/>
											<field name="move_check"/>
											<field name="remaining_amount"/>
											<field name ="rmn_amnt_per"/>
										</group>
									</form>
								</field>
								<separator string="Purchase Details" colspan="4"/>
								<group colspan="4" col="4">
									<field name="date" required="1"/>
									<field name="end_date"/>
									<field name="purchase_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
									<field name="multiple_owners"/>
									<field name="total_owners" attrs="{'readonly':[('multiple_owners','=',False)]}"/>
									<field name="recurring_rule_type"/>
									<button name="create_purchase_installment" string="Create Installment" type="object" 
										colspan="2" class="oe_highlight oe_stat_button"  attrs="{'invisible':[('pur_instl_chck','!=',False)]}"/>
									<field name="pur_instl_chck" invisible="1"/>
								</group>
								<newline/>
								<separator string="Purchase Cost" colspan="4"/>
								<field name="purchase_cost_ids" nolabel="1" colspan="4" context="{}">
									<form string="Cost Details">
										<group colspan="4">
											<field name="name"/>
											<field name="date"/>
											<field name="amount"/>
											<field name="currency_id"/>
											<field name="move_id"/>
											<field name="purchase_property_id" invisible="1"/>
											<field name="payment_details"/>
											<field name="remaining_amount"/>
											<field name="rmn_amnt_per"/>
										</group>
									</form>
									<tree string="Purchase Cost Details" editable="bottom">
										<field name="date"/>
										<field name="currency_id"/>
										<field name="amount" sum="Total Cost"/>
										<field name="payment_details"/>
										<field name="move_check"/>
										<field name="remaining_amount"/>
										<field name="rmn_amnt_per"/>
										<field name="name" string="Notes"/>
										<button name="create_move" attrs="{'invisible':[('move_check','!=',False)]}" icon="fa-cogs" string="Create Move" type="object"/>
									</tree>
								</field>
							</page>

							<page string="Nearest Places">
								<group>
									<separator string="Nearest Property" colspan="4"/>
									<field name="nearby_ids" nolabel="1">
										<tree editable="bottom">
											<field name="name" />
											<field name="type" />
											<field name="distance" />
										</tree>
										<form string="Documents">
											<group colspan="4">
												<field name="name" />
												<field name="distance" />
												<field name="type" />
											</group>
										</form>
									</field>
								</group>
							</page>

							<page string="Photos &amp; Documents">
								<group>
									<separator string="Photos" colspan="4" />
									<field name="property_photo_ids" nolabel="1" colspan="4">
										<tree string="Photos">
											<field name="photos_description" />
											<field name="doc_name" readonly="0" invisible="1"/>
											<field name="photos" filename="doc_name"/>
										</tree>
										<form string="Documents">
											<group colspan="4">
												<field name="photos_description" />
												<field name="doc_name" readonly="0" invisible="1"/>
												<field name="photos" filename="doc_name"/>
											</group>
										</form>
									</field>
								</group><newline/>
								<group>
									<separator string="Documents" colspan="4" />
									<field name="contract_attachment_ids" nolabel="1" colspan="4">
										<tree string="Documents">
											<field name="name" />
											<field name="expiry_date"/>
											<field name="doc_name" readonly="0" invisible="1"/>
											<field name="contract_attachment" filename="doc_name"/>
										</tree>
										<form string="Documents">
											<group colspan="4">
												<field name="name" colspan="2"/>
												<field name="expiry_date"/>
												<newline />
												<field name="doc_name" readonly="0" invisible="1"/>
												<field name="contract_attachment" filename="doc_name"/>
											</group>
										</form>
									</field>
								</group>
							</page>
						</notebook>
						<newline/>
						<separator string="Notes" colspan="2"/>
						<field name="note" nolabel="1" colspan="2"/>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Property Tree View  -->
		<record id="property_view_asset_tree" model="ir.ui.view">
			<field name="name">property.view.asset.tree</field>
			<field name="model">account.asset.asset</field>
			<field name="arch" type="xml">
				<tree string="Properties">
					<field name="name"/>
					<field name="category_id"/>
					<field name="age_of_property"/>
					<field name="type_id"/>
					<field name="furnished"/>
					<field name="value"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<!-- Property Search View  -->
		<record id="view_account_asset_search" model="ir.ui.view">
		<field name="name">account.asset.asset.search</field>
		<field name="model">account.asset.asset</field>
		<field name="arch" type="xml">
			<search string="Property View">
				<filter string="Active" name="active" domain="[('active','=',1)]"/>
				<filter string="In Active" name="active" domain="[('active','!=',1)]"/>
				<filter string="Available" name="available" domain="[('state','=','draft')]"/>
				<filter string="On Lease" name="on_lease" domain="[('state','=','normal')]"/>
				<filter string="Booked" name="book" domain="[('state','=','book')]"/>
				<filter string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
				<filter string="Sale" name="sale" domain="[('state','=','close')]"/>
				<filter string="Sold" name="sold" domain="[('state','=','sold')]"/>
				<filter string="Parent Property" name="property" domain="[('parent_id','=',False)]"/>
				<filter string="Child Property" name="property" domain="[('parent_id','!=',False)]"/>
				<field name="name"/>
				<field name="type_id"/>
				<field name="parent_id"/>
				<field name="furnished"/>
				<field name="ground_rent"/>
				<field name="age_of_property"/>
				<newline/>
				<group expand="0" string="Group By..." colspan="4" col="10">
					<filter string="Property Type" icon="terp-personal" domain="[]" context="{'group_by':'type_id'}"/>
					<filter string="Furnish Type" icon="terp-personal" domain="[]" context="{'group_by':'furnished'}"/>
					<filter string="State" name="grpstate" icon="terp-personal" domain="[]" context="{'group_by':'state'}"/>
					<filter string="Country" name="country" icon="terp-personal" domain="[]" context="{'group_by':'country_id'}"/>
					<filter string="Date" context="{'group_by':'age_of_property'}"/>
				</group>
			</search>
		</field>
		</record>

		<!-- Property Kanban View  -->
		<record model="ir.ui.view" id="property_asset_kanban_view">
			<field name="name">Property Asset Kanban</field>
			<field name="model">account.asset.asset</field>
			<field name="arch" type="xml">
				<kanban default_group_by="state">
					<field name="state"/>
					<field name="color"/>
					<field name="name"/>
					<field name="parent_id"/>
					<field name="type_id"/>
					<field name="furnished"/>
					<field name="has_image"/>
					<field name="country_id"/>
					<field name="state_id"/>
					<field name="city"/>
					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_vignette oe_semantic_html_override oe_kanban_card oe_kanban_project oe_kanban_global_click">
								<table width="100%"> 
									<tr>
										<td width="30%">
											<a type="open">
												<t t-if="record.has_image.raw_value === true">
													<div class="o_kanban_image">
														<img t-att-src="kanban_image('account.asset.asset', 'image', record.id.value)" style="width:100% !important;height:150% !important;"/>
													</div>
												</t>
												<t t-if="record.has_image.raw_value === false">
													<div class="o_kanban_image">
														<img t-att-src='_s + "/base/static/src/img/company_image.png"' style="width:100% !important;height:150% !important;"/>
													</div>
												</t>
											</a>
										</td>
										<td width="67%">
											<div class="oe_kanban_details">
												<h4 class="oe_partner_heading"><a type="open"><field name="name"/></a></h4>
												<ul>
													<li t-if="record.type_id.raw_value "><b>Type : </b><field name="type_id"/></li>
													<li t-if="record.furnished.raw_value"><b>Furnishing : </b><field name="furnished"/></li>
												</ul>
											</div>
										</td>
										<td width="3%">
											<div
												t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
												<div class="o_dropdown_kanban dropdown" groups="base.group_user">
													<a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
														<span class="fa fa-bars fa-lg" />
													</a>
													<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
														<t t-if="widget.editable">
															<li>
																<a type="edit">Edit</a>
															</li>
														</t>
														<t t-if="widget.deletable">
															<li>
																<a type="delete">Delete</a>
															</li>
														</t>
														<li>
															<ul class="oe_kanban_colorpicker" data-field="color" />
														</li>
													</ul>
												</div>
											 </div>
										</td>
									</tr>
									<tr>
										<td colspan="2">
											<ul>
												<li style="margin-top:1px;"><b>Address : </b></li>
												<li t-if="record.street.raw_value"><field name="street"/></li>
												<li t-if="record.state_id.raw_value and record.city.raw_value and record.country_id.raw_value"><field name="city"/>, <field name="state_id"/>, <field name="country_id"/></li>
											</ul>
										</td>
									</tr>
								</table>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>

		<!-- Property Gantt View  -->
		<record id="view_property_gantt" model="ir.ui.view">
			<field name="name">property_gantt</field>
			<field name="model">account.asset.asset</field>
			<field name="arch" type="xml">
				<gantt date_start="date" date_stop="sale_date" string="Sale" progress="progress">
					<field name="name"/>
				</gantt>
			</field>
		</record>

		<!-- Property Graph View -->
		<record model="ir.ui.view" id="view_property_graph_view">
			<field name="name">Property_graph</field>
			<field name="model">account.asset.asset</field>
			<field name="arch" type="xml">
				<graph string="Property Analysis" type="pivot">
					<field name="name" type="row"/>
					<field name="value" type="measure"/>
				</graph>
			</field>
		</record>

<!--######################### PROPERTY HEIRARCHY ########################### -->
		
		<!--Hierarchical Tree view for Department-->
		<record id="view_account_asset_asset_hirarch_tree" model="ir.ui.view">
			<field name="name">view.account.asset.asset.hirarch.tree</field>
			<field name="model">account.asset.asset</field>
			<field name="field_parent">child_ids</field>
			<field name="arch" type="xml">
				<tree >
					<field name="name"/>
					<field name="category_id"/>
					<field name="type_id"/>
					<field name="age_of_property"/>
					<field name="furnished"/>
					<field name="value"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<!--###########################################################
			###						Actions 						###
			###########################################################-->

<!--######################### PROPERTY ################################ -->
		
		<!--  Action For Property Views  -->
		<record id="action_property_assets_view" model="ir.actions.act_window">
			<field name="name">Property</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.asset.asset</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form,graph</field>
			<field name="search_view_id" ref="realestate.view_account_asset_search"/>
			<field name="context">{'search_default_grpstate':1}</field>
			<field name="domain">[]</field>
		</record>


		<!--Action for Property Tree-->
		<record id="action_property_asset_tree_view" model="ir.actions.act_window.view">
			<field eval="2" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="property_view_asset_tree"/>
			<field name="act_window_id" ref="action_property_assets_view"/>
		</record>

		<!-- action for property Form-->
		<record id="action_property_asset_kanban_view" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">kanban</field>
			<field name="view_id" ref="property_asset_kanban_view"/>
			<field name="act_window_id" ref="action_property_assets_view"/>
		</record>

		<!--action for Property Graph-->
		<record id="action_property_asset_graph_view" model="ir.actions.act_window.view">
			<field eval="4" name="sequence"/>
			<field name="view_mode">graph</field>
			<field name="view_id" ref="view_property_graph_view"/>
			<field name="act_window_id" ref="action_property_assets_view"/>
		</record>

<!--######################### PROPERTY HEIRARCHY ########################### -->
		
		<!--Action of Hierarchical view-->
		<record id="action_account_asset_asset_hierarch" model="ir.actions.act_window">
			<field name="name">Property Hierarchy</field>
			<field name="res_model">account.asset.asset</field>
			<field name="view_type">tree</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_account_asset_asset_hirarch_tree"/>
			<field name="domain">[('parent_id','=',False)]</field>
		</record>

