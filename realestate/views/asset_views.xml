			###						MenuItems						###
			###########################################################-->

<!--######################### PROPERTY ################################## -->

		<menuitem name="Property" id="menu_property_assets" parent="menu_property_sub" action="action_property_assets_view" sequence="1"/>

<!--######################### PROPERTY HEIRARCHY ########################### -->
	
		<menuitem id="menu_account_asset_asset_hierarch_action" parent="menu_property_sub" action="action_account_asset_asset_hierarch" groups='base.group_erp_manager,realestate.group_property_manager'/>
	
	</data>
